<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alls_background"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/edit_product_barcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edge"
        android:drawableLeft="@drawable/ic_baseline_barcode"
        android:text="Código Barras"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="Nome:"
        android:textColor="#0C3E39" />

    <EditText
        android:id="@+id/edit_Product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/rounded_edge"
        android:drawableLeft="@drawable/ic_baseline_abc_24"
        android:focusable="true"
        android:hint="Nome Produto"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textAlignment="center"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="Valor de Compra:"
        android:textColor="#0C3E39" />

    <EditText
        android:id="@+id/edit_supplierValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/rounded_edge"
        android:drawableLeft="@drawable/ic_baseline_monetization_on_24"
        android:hint="Valor de Compra"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:textAlignment="center"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="Margem de Lucro:"
        android:textColor="#0C3E39" />

    <EditText
        android:id="@+id/edit_profitMargin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/rounded_edge"
        android:drawableLeft="@drawable/ic_margem_profit"
        android:hint="Margem de Lucro"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:textAlignment="center"
        tools:ignore="TextContrastCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:padding="2dp">

        <Button
            android:id="@+id/btn_toCalc_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edge"
            android:minHeight="48dp"
            android:onClick="saveProduct"
            android:text="Margem"
            android:textColor="#F2F4F4"
            app:backgroundTint="#2196F3"
            app:icon="@drawable/ic_baseline_calculate_24"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

        <TextView
            android:id="@+id/tv_profitMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sugestão não Calculada."
            android:textAlignment="center"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="Valor de Venda:"
        android:textColor="#0C3E39" />

    <EditText
        android:id="@+id/edit_saleValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/rounded_edge"
        android:hint="Valor de Venda"
        android:textAlignment="center"
        android:inputType="numberSigned|numberDecimal"
        android:minHeight="48dp"
        tools:ignore="TextContrastCheck" />


    <Button
        android:id="@+id/btn_tosave_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edge"
        android:minHeight="48dp"
        android:onClick="saveProduct"
        android:text="Salvar"
        android:textColor="#F2F4F4"
        app:backgroundTint="#4CAF50"
        app:icon="@android:drawable/ic_menu_save"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />


</LinearLayout>