<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alls_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            tools:srcCompat="@drawable/ic_baseline_person_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="20dp"
            android:background="@drawable/rounded_edge"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_TelaLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:text="Cadastro Novo Usuário"
                android:textAlignment="center"
                android:textColor="#736B6B"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_regiter_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_edge"
                android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
                android:editable="false"
                android:ems="10"
                android:hint="E-mail"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edt_register_pw1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:background="@drawable/rounded_edge"
                android:drawableLeft="@drawable/ic_baseline_password"
                android:editable="false"
                android:ems="10"
                android:enabled="false"
                android:hint="Senha"
                android:inputType="numberPassword" />

            <EditText
                android:id="@+id/edt_register_pw2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:background="@drawable/rounded_edge"
                android:drawableLeft="@drawable/ic_baseline_password"
                android:editable="false"
                android:ems="10"
                android:enabled="false"
                android:hint="Repetir Senha"
                android:inputType="numberPassword" />

            <Button
                android:id="@+id/btn_register_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawableLeft="@android:drawable/ic_menu_save"
                android:enabled="false"
                android:fadeScrollbars="true"
                android:text="Criar"
                app:backgroundTint="#4CAF50" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Ativação de perfil pelo WhatsApp: (99) 9 91633616"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>