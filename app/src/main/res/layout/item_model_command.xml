<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblCommandSituation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:text="NÃ£o recebido"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#009688"
            android:textSize="10sp"
            android:textStyle="italic" />

    </LinearLayout>
        <TextView
            android:id="@+id/lblCommand"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Antarctiva Original"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblDateCreate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="false"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/lblProduct"
                android:text="Criando em"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#06187C"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/lblTotalValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="false"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/lblProduct"
                android:layout_weight="1"
                android:text="Total"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#06187C"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>